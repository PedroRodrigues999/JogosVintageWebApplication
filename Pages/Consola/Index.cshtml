@page
@model JogosVintageWebApplication.Pages.Consola.IndexModel

@{
    ViewData["Title"] = "Lista de Consolas";
}

<h1>Lista de Consolas</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Descrição)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Processador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].RAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Saida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Ano)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Consolas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrição)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Processador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
